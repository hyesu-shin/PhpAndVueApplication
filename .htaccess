LoadModule rewrite_module modules/mod_rewrite.so

<Directory /public>
  Options Indexes FollowSymLinks MultiViews
  AddType application/x-httpd-php .php

  AllowOverride All

  Require all granted

  RewriteEngine On
  RewriteBase /
  RewriteRule ^([^.?]+)$ /index.php
</Directory>

<IfModule dir_module>
    DirectoryIndex index.html index.php
</IfModule>