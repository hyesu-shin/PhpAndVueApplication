<Directory />
  AllowOverride none
  Require all denied

  Header always set Access-Control-Allow-Origin "*"
</Directory>

<Directory /public>
  Options Indexes FollowSymLinks MultiViews
  AddType application/x-httpd-php .php

  AllowOverride All

  Require all granted

  RewriteEngine On
  RewriteRule ^([^.?]+)$ /index.php
</Directory>

<IfModule dir_module>
    DirectoryIndex index.html index.php
</IfModule>